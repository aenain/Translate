!!! 5
%html
  %head
    %title Translate
    = stylesheet_link_tag "tiles"
    = javascript_include_tag "application"
    = csrf_meta_tags
 
  %body
    .page
      .top-bar
        %a{ href: '/' }
          %canvas#logo

      .clear

      .navigation
        %ul.menu
          %li.active= link_to 'W', words_path
          %li= link_to 'T', new_exam_path
          %li= link_to '?', '#'

      .content
        .title
          %h1 Heading 1

        %h2 Heading 2
        %h3 Heading 3

        %p
          Regular paragraph with
          %strong strong
          and
          %em em

        .form
          %form
            #polish

            .actions
              %input.next{ type: 'button', value: 'Continue' }
              %input.prev{ type: 'button', value: 'Back' }

        /= yield

      :javascript
        $(function() {
          canvg('logo', '/assets/translate_logo.svg');
          $('#polish').languageBox({ lang: 'pl', layout: 'compact', autocomplete: 'false', width: '513px' });
        });