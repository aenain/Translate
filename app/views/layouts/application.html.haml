!!! 5
%html
  %head
    %title Translate
    = favicon_link_tag '/images/favicon.png', type: 'image/png'

    = stylesheet_link_tag "tiles"
    = javascript_include_tag "jquery-1.6.4.min", "jquery.ui-1.8.16.custom", "jquery.caret.1.02", "jquery.fcbkcomplete.min", "jquery.hotkeys", "jquery.identify", "jquery.language-box"
    = csrf_meta_tags
 
  %body
    .page
      .top-bar
        %a{ href: '/' }
          #logo

          /= link_to "What is this all about?", how_static_path, class: 'handwritten', style: 'float: right; margin-top: 16px'

      .clear

      .navigation
        %ul.menu
          %li{ class: menu_item_class(/words/) }= link_to 'Words', words_path
          %li{ class: menu_item_class(/exams/) }= link_to 'Quiz', exam_path_considering_session
          %li
            %form#search-form{ action: search_words_path }
              = hidden_field_tag :lang, Language::PRIMARY
              .search-box

            = link_to 'Search', '#'

          %li= link_to '+', new_word_path, class: 'add'

      .content
        = yield

      :javascript
        $(function() {
          // search
          $('#search-form .search-box').languageBox({ lang: '#{Language::PRIMARY}', languages: ['pl', 'de'], layout: 'compact', autocomplete: 'false', width: '281px', placeholder: 'Search...', inputFieldNameFormat: 'query', languageChangeCallback: function(new_lang) { $("#lang").val(new_lang); } });

          $('#search-form, #search-form + a').mouseover(function() {
            $('#search-form:visible').clearQueue();
            $('#search-form').not(':visible').fadeIn(200);
          }).mouseout(function() {
            $('#search-form:visible').delay(100).queue(function() { $(this).fadeOut(200).dequeue(); });
          });
        });